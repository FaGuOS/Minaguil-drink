<% content_for :page_title do %>
  Admin Password Check
<% end %>

<div class="container mt-4">
  <h2>認証用のパスワードを入力してください。</h2>
  <%= form_with url: admins_check_password_path, method: :post, local: true do %>
    <div class="form-group">
      <%= label_tag :password, 'パスワード' %>
      <%= password_field_tag :password, nil, class: 'form-control', required: true %>
    </div>
    <div class="form-group mt-3">
      <%= submit_tag '確認', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
