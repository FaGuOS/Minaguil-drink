<% content_for :page_title do %>
  Admin Dashboard
<% end %>
<div class="container-fluid bg-dark text-white min-vh-100">
  <div class="row mt-4">
    <div class="col-md-3">
      <h2 class="mb-4">管理者メニュー</h2>
      <div class="list-group">
        <%= link_to 'ユーザー一覧', admin_users_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
        <%= link_to '投稿一覧', admin_posts_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
        <%= link_to 'コメント一覧', admin_comments_path, class: 'list-group-item list-group-item-action bg-dark text-white' %>
      </div>
    </div>
    <div class="col-md-9">
      <h2 class="mb-4">Nonsenseが付けられた投稿</h2>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">投稿タイトル</th>
            <th scope="col">ユーザー名</th>
            <th scope="col">Nonsense</th>
          </tr>
        </thead>
        <tbody>
          <% @nonsense_posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.user.user_name %></td>
              <td><%= post.nonsense %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
