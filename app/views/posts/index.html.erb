<div class="container-fluid mt-4">
  <% content_for :page_title do %>
    All Posts!
  <% end %>

  <!-- ソートフォーム -->
  <div class="row justify-content-center mb-3">
    <div class="col-md-6">
      <%= form_with url: posts_path, method: :get, local: true do %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="form-group">
            <%= label_tag :sort, 'Sort by:' %>
            <% options = [['Created At', 'created_at'], ['Yes', 'yes']] %>
            <% options << ['Nonsence', 'nonsence'] if current_user&.admin? %>
            <%= select_tag :sort, options_for_select(options, params[:sort]), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :direction, 'Direction:' %>
            <%= select_tag :direction, options_for_select([['Ascending', 'asc'], ['Descending', 'desc']], params[:direction]), class: 'form-control' %>
          </div>
          <%= submit_tag 'Sort', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <!-- 投稿内容のリスト -->
    <div class="col-md-12">
      <%= form_with url: hide_selected_posts_path, method: :put, local: true do %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% @posts.each do |post| %>
            <div class="col">
              <div class="card h-100 <%= 'grayed-out' if post.hidden %>">
                <div class="card-body d-flex flex-column">
                  <div class="d-flex">
                    <div class="flex-shrink-0">
                      <p class="card-text"><strong>User:</strong> <%= post.user.user_name %></p>
                      <%= image_tag post.image.attached? ? url_for(post.image) : 'Reviewonly.png', class: 'img-thumbnail', style: 'width: 100px; height: auto;' %>
                    </div>
                    <div class="flex-grow-1 ms-3">
                      <%= link_to post_path(post), class: 'stretched-link text-decoration-none' do %>
                        <h4 class="card-title text-dark"><%= post.title %></h4>
                      <% end %>
                      <p><strong>Rate:</strong> <%= display_rate(post.rate) %></p>
                      <p class="card-text"><%= truncate(post.review, length: 100, omission: '...') %></p>
                      <p class="card-text"><strong>Yes:</strong> <%= post.yes %></p>
                      <% if current_user&.admin? %>
                        <p class="card-text"><strong>Nonsence:</strong> <%= post.nonsence %></p>
                      <% end %>
                    </div>
                  </div>
                  <div class="mt-auto d-flex justify-content-between">
                    <% if current_user&.admin? %>
                      <%= link_to 'Hide', hide_post_path(post), method: :put, class: 'btn btn-dark me-2' %>
                      <%= check_box_tag 'post_ids[]', post.id %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <% if current_user&.admin? %>
          <div class="d-flex justify-content-center mt-3">
            <%= submit_tag 'Hide Selected Posts', class: 'btn btn-danger' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center">
    <%= paginate @posts %>
  </div>
</div>
