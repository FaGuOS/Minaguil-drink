<div class="container-fluid mt-4">
  <% content_for :page_title do %>
    All Posts!
  <% end %>
  
  <!-- ソートフォーム -->
  <div class="row justify-content-center mb-4">
    <div class="col-md-6">
      <%= form_with url: posts_path, method: :get, local: true do %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="form-group">
            <%= label_tag :sort, 'Sort by:' %>
            <% options = [['Created At', 'created_at'], ['Yes', 'yes']] %>
            <% options << ['Nonsence', 'nonsence'] if current_user&.admin? %>
            <%= select_tag :sort, options_for_select(options, params[:sort]), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :direction, 'Direction:' %>
            <%= select_tag :direction, options_for_select([['Ascending', 'asc'], ['Descending', 'desc']], params[:direction]), class: 'form-control' %>
          </div>
          <%= submit_tag 'Sort', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <!-- 投稿内容のリスト -->
    <div class="col-md-12">
      <%= form_with url: hide_selected_posts_path, method: :put, local: true do %>
        <div class="row">
          <% @posts.each do |post| %>
            <% unless current_user.hidden_posts.include?(post.id) %>
              <div class="col-md-6 mb-4">
                <div class="card <%= 'grayed-out' if post.hidden %>">
                  <div class="card-body d-flex">
                    <div class="flex-shrink-0">
                      <%= image_tag post.image.attached? ? url_for(post.image) : 'Reviewonly.png', class: 'img-thumbnail', style: 'width: 150px; height: auto;' %>
                    </div>
                    <div class="flex-grow-1 ms-3">
                      <h4 class="card-title"><%= link_to post.title, post_path(post), class: 'text-dark' %></h4>
                      <p class="card-text"><%= truncate(post.review, length: 100, omission: '...') %></p>
                      <p class="card-text"><strong>User:</strong> <%= post.user.user_name %></p>
                      <p class="card-text"><strong>Yes:</strong> <%= post.yes %></p>
                      <% if current_user&.admin? %>
                        <p class="card-text"><strong>Nonsence:</strong> <%= post.nonsence %></p>
                      <% end %>
                      <div class="d-flex justify-content-between">
                        <% if user_signed_in? %>
                          <% if post.user == current_user %>
                            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary me-2' %>
                            <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                          <% else %>
                            <%= link_to 'Nonsence', nonsence_post_path(post), method: :post, data: { confirm: 'Mark this post as nonsense?' }, class: 'btn btn-warning me-2' %>
                          <% end %>
                          <% if current_user.admin? %>
                            <%= link_to 'Hide', hide_post_path(post), method: :put, class: 'btn btn-dark me-2' %>
                            <%= check_box_tag 'post_ids[]', post.id %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <% if current_user&.admin? %>
          <%= submit_tag 'Hide Selected Posts', class: 'btn btn-danger' %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center">
    <%= paginate @posts %>
  </div>
</div>
